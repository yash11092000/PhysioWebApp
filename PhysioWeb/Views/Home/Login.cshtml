@{
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
	ViewData["Title"] = "Login";
}
<style>
	body {
		background-color: #fffaf5;
	}

	.login-card {
		border-radius: 1rem;
		padding: 2rem;
		background-color: #fff;
		box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
	}

	.btn-orange {
		background-color: #f28500;
		color: white;
	}

		.btn-orange:hover {
			background-color: #d66e00;
		}

	.form-control:focus {
		border-color: #f28500;
		box-shadow: 0 0 0 0.2rem rgba(242, 133, 0, 0.25);
	}

	.link-orange {
		color: #f28500;
	}

		.link-orange:hover {
			color: #d66e00;
		}
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
	<div class="col-md-6 col-lg-4" data-aos="zoom-in">
		<div class="login-card">
			<div class="text-center mb-4">
				<i class="bi bi-heart-pulse-fill fs-1 text-warning"></i>
				<h3 class="fw-bold mt-2" style="color: #f28500;">Physio Login</h3>
			</div>

			<form action="/login" method="post">
				<div class="mb-3">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
				</div>

				<div class="mb-3">
					<label for="password" class="form-label d-flex justify-content-between">
						<span>Password</span>
						<a href="#" class="small link-orange">Forgot?</a>
					</label>
					<input type="password" class="form-control" id="password" name="password" required placeholder="••••••••">
				</div>

				<div class="d-grid">
					<button type="submit" class="btn btn-orange">Log In</button>
				</div>
			</form>

			<div class="text-center mt-4">
				<small>Don't have an account? <a href="/Home/Register" class="link-orange fw-bold">Sign up</a></small>
			</div>
		</div>
	</div>
</div>

@{
    ViewData["Title"] = "Contact Us";
}

<section class="py-5" style="background-color: #fff;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold" style="color: #f28500;" data-aos="fade-up">Contact Us</h2>
            <p class="text-muted fs-5" data-aos="fade-up" data-aos-delay="100">We’re here to help. Reach out with your questions or feedback!</p>
        </div>

        <div class="row g-5">
            <!-- Contact Info -->
            <div class="col-md-5" data-aos="fade-right">
                <div class="p-4 bg-light rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold mb-3">Get in Touch</h5>
                    <p class="text-muted mb-1"><i class="bi bi-envelope-fill me-2 text-warning"></i> support@physio.com</p>
                    <p class="text-muted mb-1"><i class="bi bi-telephone-fill me-2 text-warning"></i> +91 98765 43210</p>
                    <p class="text-muted"><i class="bi bi-geo-alt-fill me-2 text-warning"></i> Mumbai, India</p>
                    <hr>
                    <h6 class="fw-bold mb-2">Working Hours</h6>
                    <p class="text-muted mb-0">Mon - Sat: 9:00 AM - 6:00 PM</p>
                    <p class="text-muted">Sunday: Closed</p>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7" data-aos="fade-left">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <form action="/contact" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" name="name" required placeholder="John Doe">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Your Email</label>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Your Message</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required placeholder="Write your message here..."></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-orange">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@{
	ViewData["Title"] = "Home Page";
}
<style>
	.hero-section {
		background-color: #F1FAFB;
		border-bottom: 4px solid #FFD166; /* soft yellow underline for warmth */
	}

	/* Section background */
	.service-section {
		background-color: #F1FAFB; /* Calm light blue background */
	}

	/* Section title */
	.section-title {
		color: var(--primary-color);
	}

	/* Service cards */
	.service-card {
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

		.service-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 0.75rem 1.25rem rgba(0, 119, 182, 0.15);
		}

	/* Icon Circle */
	.icon-circle {
		width: 70px;
		height: 70px;
		border-radius: 50%;
		background-color: var(--secondary-color);
		display: flex;
		align-items: center;
		justify-content: center;
	}

		.icon-circle i {
			color: var(--primary-color);
		}

	.transition-all {
		transition: all 0.3s ease;
	}

	.hover-shadow:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 20px rgba(0, 119, 182, 0.2);
	}

	.card-blue {
		background-color: #ffffff;
		border-radius: 1rem;
		box-shadow: 0 4px 15px rgba(0, 119, 182, 0.08);
		transition: all 0.3s ease;
	}

		.card-blue:hover {
			transform: translateY(-6px);
			box-shadow: 0 8px 25px rgba(0, 119, 182, 0.25);
		}

	.icon-circle {
		width: 70px;
		height: 70px;
		background-color: #90E0EF;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 1rem auto;
		transition: background-color 0.3s ease;
	}

	.card-blue:hover .icon-circle {
		background-color: #0077B6;
	}

		.card-blue:hover .icon-circle i {
			color: #FFD166 !important; /* Accent contrast */
		}

	.testimonial-card {
		background-color: #ffffff;
		border-radius: 1rem;
		padding: 1.8rem;
		box-shadow: 0 4px 15px rgba(0, 119, 182, 0.08);
		transition: all 0.3s ease;
	}

		.testimonial-card:hover {
			transform: translateY(-6px);
			box-shadow: 0 8px 25px rgba(0, 119, 182, 0.25);
		}

		.testimonial-card p {
			font-style: italic;
			color: #555;
		}

		.testimonial-card img {
			width: 50px;
			height: 50px;
			object-fit: cover;
		}

		.testimonial-card:hover img {
			border-color: #FFD166 !important; /* Accent yellow glow */
		}

	.card-hover:hover {
		transform: translateY(-5px);
		transition: all 0.3s ease;
		box-shadow: 0 6px 20px rgba(0,0,0,0.1);
	}

	.hero-section-dark {
		background: linear-gradient(135deg, #0a2540, #163d63);
		color: #ffffff;
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

		.hero-section-dark h1 {
			color: #ffffff;
		}

		.hero-section-dark p {
			color: #d1e0f0;
		}

	/* Button styling */
	.btn-light {
		background-color: #f5f9ff;
		color: #0a2540;
		border-radius: 50px;
		font-weight: 600;
		transition: all 0.3s ease;
	}

		.btn-light:hover {
			background-color: #d9e8ff;
			transform: translateY(-2px);
		}

	#particles-js {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		background: linear-gradient(135deg, #023E8A, #0077B6);
	}
</style>

<header class="py-5 hero-section-dark position-relative">
	<div id="particles-js"></div>
	<div class="container text-center text-white" style="z-index:50;">
		<h1 class="display-4 fw-bold mb-3">Welcome to Physio</h1>
		<p class="lead mb-4">
			Get matched with expert physiotherapists and take the first step toward better movement and recovery.
		</p>
		<a href="#BookSection" class="btn btn-light btn-lg px-5 me-3 shadow">Book Now</a>
	</div>
</header>


<section class="py-5" style="background-color: #E8F6FA;">

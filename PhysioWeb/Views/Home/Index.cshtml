@{
	ViewData["Title"] = "Home Page";
}

<header class="py-5" style="background: linear-gradient(to right, #fffdfb, #ffe8d6);">
	<div class="container text-center">
		<h1 class="display-4 fw-bold text-dark">Welcome to Physio</h1>
		<p class="lead text-muted mb-4">
			Get matched with expert physiotherapists and take the first step toward better movement and recovery.
		</p>
		<!-- Main CTA Button -->
		<a href="#BookSection" class="btn btn-orange btn-lg px-5 me-3 shadow">Book Now</a>
	</div>
</header>


<section class="py-5" style="background-color: #fffaf5;">
	<div class="container text-center">
		<h2 class="fw-bold mb-5" style="color: #f28500;" data-aos="fade-up">How It Works!!</h2>

		<div class="row justify-content-center g-4">

			<!-- Step 1 -->
			<div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
				<div class="p-4 bg-white rounded-4 shadow-sm h-100">
					<div class="mb-3">
						<i class="bi bi-person-plus-fill fs-1 text-warning"></i>
					</div>
					<h5 class="fw-bold mb-2">Sign Up</h5>
					<p class="text-muted">Create your Physio account as a user or therapist — it’s free and only takes a minute.</p>
				</div>
			</div>

			<!-- Step 2 -->
			<div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
				<div class="p-4 bg-white rounded-4 shadow-sm h-100">
					<div class="mb-3">
						<i class="bi bi-calendar-check-fill fs-1 text-warning"></i>
					</div>
					<h5 class="fw-bold mb-2">Book a Session</h5>
					<p class="text-muted">Browse qualified physiotherapists and schedule appointments in just a few clicks.</p>
				</div>
			</div>

			<!-- Step 3 -->
			<div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
				<div class="p-4 bg-white rounded-4 shadow-sm h-100">
					<div class="mb-3">
						<i class="bi bi-activity fs-1 text-warning"></i>
					</div>
					<h5 class="fw-bold mb-2">Start Healing</h5>
					<p class="text-muted">Attend your sessions, follow progress, and feel better — one step at a time.</p>
				</div>
			</div>

		</div>
	</div>
</section>

<section id="BookSection" class="py-5" style="background-color: #fff1e6;">
	<div class="container text-center">
		<h2 class="fw-bold mb-5" style="color: #f28500;" data-aos="fade-up">Our Physiotherapy Services</h2>

		<div class="row g-4 justify-content-center">

			<!-- Online Consultation Card -->
			<div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
				<div class="bg-white p-4 rounded-4 shadow h-100 d-flex flex-column">
					<div class="d-inline-flex align-items-center justify-content-center bg-warning bg-opacity-25 rounded-circle mb-3 mx-auto" style="width: 70px; height: 70px;">
						<i class="bi bi-laptop fs-3" style="color:#f28500;"></i>
					</div>
					<h5 class="fw-bold">Online Consultation</h5>
					<p class="text-muted flex-grow-1">Get expert guidance and physiotherapy advice from certified professionals through secure video calls.</p>
					<a href="/Booking/BookSession?BookingType=1" class="btn fw-bold text-white mt-auto" style="background-color:#f28500; border:none;">Consult Online</a>
				</div>
			</div>

			<!-- Book Online Physiotherapy Card -->
			<div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
				<div class="bg-white p-4 rounded-4 shadow h-100 d-flex flex-column">
					<div class="d-inline-flex align-items-center justify-content-center bg-warning bg-opacity-25 rounded-circle mb-3 mx-auto" style="width: 70px; height: 70px;">
						<i class="bi bi-calendar-check fs-3" style="color:#f28500;"></i>
					</div>
					<h5 class="fw-bold">Book Online Physiotherapy</h5>
					<p class="text-muted flex-grow-1">Easily schedule physiotherapy sessions with licensed experts through our online booking system.</p>
					<a href="/Booking/BookSession?BookingType=2" class="btn fw-bold text-white mt-auto" style="background-color:#f28500; border:none;">Book Now</a>
				</div>
			</div>

			<!-- Physiotherapy at Home Card -->
			<div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
				<div class="bg-white p-4 rounded-4 shadow h-100 d-flex flex-column">
					<div class="d-inline-flex align-items-center justify-content-center bg-warning bg-opacity-25 rounded-circle mb-3 mx-auto" style="width: 70px; height: 70px;">
						<i class="bi bi-house-heart fs-3" style="color:#f28500;"></i>
					</div>
					<h5 class="fw-bold">Physiotherapy at Home</h5>
					<p class="text-muted flex-grow-1">Receive professional physiotherapy treatments in the comfort of your home with our trusted therapists.</p>
					<a href="/Booking/BookSession?BookingType=3" class="btn fw-bold text-white mt-auto" style="background-color:#f28500; border:none;">Book a Visit</a>
				</div>
			</div>
		</div>
	</div>
</section>



<section class="py-5" style="background-color: #fff1e6;">
	<div class="container text-center">

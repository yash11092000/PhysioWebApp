<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PhysioWeb</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PhysioWeb.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
	<style>

		:root {
			--primary-color: #0077B6; /* Strong Blue */
			--primary-dark: #005f8f; /* Hover Blue */
			--secondary-color: #90E0EF; /* Light Blue */
			--accent-color: #FFD166; /* Soft Yellow */
			--text-color: #023047; /* Dark Navy */
			--background-color: #F1FAFB; /* Light Blue Tint */
		}

		/* Buttons */
		.btn-primary-custom {
			background-color: var(--primary-color);
			color: #fff !important;
			border-radius: 50px;
			padding: 0.6rem 1.5rem;
			font-size: 1.1rem;
			font-weight: 500;
			border: none;
			transition: all 0.3s ease;
		}

			.btn-primary-custom:hover {
				background-color: var(--primary-dark);
			}

		.btn-outline-primary-custom {
			color: var(--primary-color) !important;
			border: 2px solid var(--primary-color);
			border-radius: 50px;
			padding: 0.6rem 1.5rem;
			font-size: 1.1rem;
			font-weight: 500;
			transition: all 0.3s ease;
		}

			.btn-outline-primary-custom:hover {
				background-color: var(--primary-color);
				color: #fff !important;
			}

		/* Navbar */
		.navbar-custom {
			background-color: var(--background-color);
		}

		.navbar-brand-custom {
			color: var(--primary-color) !important;
			font-size: 1.6rem;
			font-weight: 700;
		}

		.nav-link-custom {
			color: var(--text-color) !important;
			font-weight: 500;
			transition: color 0.3s ease;
		}

			.nav-link-custom:hover {
				color: var(--primary-color) !important;
			}

		/* Card */
		.card-custom {
			border-radius: 1rem;
			background-color: #fff;
			border: 1px solid var(--secondary-color);
		}

		/* Global text + background */
		body {
			background-color: var(--background-color);
			color: var(--text-color);
		}

		.hero-section {
			background-color: #F1FAFB; 
			color: var(--text-color);
		}

			.hero-section h1 {
				color: var(--primary-color);
			}

			.hero-section p {
				color: #023047;
				opacity: 0.8;
			}


	</style>
</head>
<body>
	<header style="position: sticky;top: 0;z-index: 99;">
		<nav class="navbar navbar-expand-lg navbar-custom shadow-sm sticky-top">
			<div class="container">
				<a class="navbar-brand navbar-brand-custom" href="/">
					<i class="bi bi-heart-pulse-fill me-1"></i> Physio
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
					<ul class="navbar-nav me-4">
						<li class="nav-item"><a class="nav-link nav-link-custom active" href="/">Home</a></li>
						<li class="nav-item"><a class="nav-link nav-link-custom" href="/Home/AboutUs">About</a></li>
						<li class="nav-item"><a class="nav-link nav-link-custom" href="/Home/ContactUs">Contact</a></li>
					</ul>

					<a href="/Home/Login" class="btn btn-outline-primary-custom me-2">Login</a>
					<a href="/Home/Register" class="btn btn-primary-custom">Sign Up</a>
				</div>
			</div>
		</nav>

	</header>
	<div class="">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - PhysioWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script>
		AOS.init({
		  duration: 800, // animation duration
		  once: true     // animation only once
		});
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

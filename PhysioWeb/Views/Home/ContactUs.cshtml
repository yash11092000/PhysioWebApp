@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .contact-section {
        background-color: #F1FAFB;
    }

    .contact-card {
        background-color: #FFFFFF;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
    }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(0, 119, 182, 0.15);
        }

    .highlight-text {
        color: #0077B6;
    }

    .section-heading {
        color: #023047;
        font-weight: 700;
    }

    .form-control:focus, textarea:focus {
        border-color: #0077B6 !important;
        box-shadow: 0 0 0 0.2rem rgba(0, 119, 182, 0.25) !important;
    }

    .btn-blue {
        background-color: #0077B6;
        color: white;
        border-radius: 12px;
        transition: background-color 0.3s ease;
    }

        .btn-blue:hover {
            background-color: #023E8A;
            color: white;
        }

    .info-icon {
        color: #0077B6;
    }
</style>
<section class="py-5 contact-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-heading" data-aos="fade-up">Contact <span class="highlight-text">Us</span></h2>
            <p class="text-muted fs-5" data-aos="fade-up" data-aos-delay="100">
                We’re here to help! Feel free to reach out for any questions, feedback, or assistance.
            </p>
        </div>

        <div class="row g-5 align-items-stretch">
            <!-- Contact Info -->
            <div class="col-md-5" data-aos="fade-right">
                <div class="p-4 contact-card rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold mb-3" style="color:#023047;">Get in Touch</h5>
                    <p class="text-muted mb-2"><i class="bi bi-envelope-fill me-2 info-icon"></i> support@physio.com</p>
                    <p class="text-muted mb-2"><i class="bi bi-telephone-fill me-2 info-icon"></i> +91 98765 43210</p>
                    <p class="text-muted mb-3"><i class="bi bi-geo-alt-fill me-2 info-icon"></i> Mumbai, India</p>
                    <hr>
                    <h6 class="fw-bold mb-2" style="color:#023047;">Working Hours</h6>
                    <p class="text-muted mb-0">Mon - Sat: 9:00 AM - 6:00 PM</p>
                    <p class="text-muted">Sunday: Closed</p>
                    <hr>
                    <h6 class="fw-bold mb-3" style="color:#023047;">Follow Us</h6>
                    <div>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-facebook fs-4 highlight-text"></i></a>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-instagram fs-4 highlight-text"></i></a>
                        <a href="#" class="text-decoration-none"><i class="bi bi-linkedin fs-4 highlight-text"></i></a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7" data-aos="fade-left">
                <div class="p-4 contact-card rounded-4 shadow-sm h-100">
                    <form action="/contact" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label fw-semibold" style="color:#023047;">Your Name</label>
                            <input type="text" class="form-control form-control-lg rounded-3" id="name" name="name" required placeholder="John Doe" style="background-color:#F1FAFB;">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold" style="color:#023047;">Your Email</label>
                            <input type="email" class="form-control form-control-lg rounded-3" id="email" name="email" required placeholder="you@example.com" style="background-color:#F1FAFB;">
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label fw-semibold" style="color:#023047;">Your Message</label>
                            <textarea class="form-control form-control-lg rounded-3" id="message" name="message" rows="4" required placeholder="Write your message here..." style="background-color:#F1FAFB;"></textarea>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-lg btn-blue">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@{
    ViewData["Title"] = "About Us";
}


<section class="py-5" style="background-color: #fffaf5;">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6" data-aos="fade-right">
                <img src="https://via.placeholder.com/500x350" class="img-fluid rounded-4 shadow-sm" alt="Physio care">
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <h2 class="fw-bold mb-3" style="color: #f28500;">About Physio</h2>
                <p class="text-muted fs-5">
                    Physio is a platform designed to bridge the gap between patients and expert physiotherapists.
                    We aim to make recovery easy, accessible, and effective — all from the comfort of your home or clinic.
                </p>
                <p class="text-muted">
                    Whether you're seeking support for an injury, post-operative therapy, or chronic pain management, Physio empowers you to connect with licensed professionals and track your progress.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container text-center">
        <h3 class="fw-bold mb-5" style="color: #f28500;" data-aos="fade-up">Our Mission</h3>
        <div class="row g-4">

            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="p-4 bg-light rounded-4 shadow-sm h-100">
                    <i class="bi bi-heart-pulse-fill fs-1 text-warning mb-3"></i>
                    <h5 class="fw-bold">Empower Recovery</h5>
                    <p class="text-muted">Support users on their journey to a healthier, pain-free life through expert care.</p>
                </div>
            </div>

            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="p-4 bg-light rounded-4 shadow-sm h-100">
                    <i class="bi bi-globe2 fs-1 text-warning mb-3"></i>
                    <h5 class="fw-bold">Accessible Care</h5>
                    <p class="text-muted">Bring physiotherapy services closer to everyone, regardless of location.</p>
                </div>
            </div>

            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="p-4 bg-light rounded-4 shadow-sm h-100">
                    <i class="bi bi-person-check-fill fs-1 text-warning mb-3"></i>
                    <h5 class="fw-bold">Verified Professionals</h5>
                    <p class="text-muted">Only qualified and verified physiotherapists can join our network.</p>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="py-5" style="background-color: #fffaf5;">
    <div class="container text-center" data-aos="fade-up">
        <h4 class="fw-bold mb-4" style="color: #f28500;">Ready to start your healing journey?</h4>
        <a href="/book" class="btn btn-lg btn-orange px-5">Book Your First Session</a>
    </div>
</section>
